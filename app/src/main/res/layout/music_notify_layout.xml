<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/music_notify_picture"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/red"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
    <TextView
        android:id="@+id/music_notify_name"
        android:layout_width="match_parent"

        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/seek"
        android:gravity="center"
        android:text="音乐名"
        android:textSize="@dimen/notify_music"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
  />
    <TextView
        android:id="@+id/music_notify_singer"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="歌手名"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/seekn"
        android:textSize="@dimen/notify_singer"
        android:layout_below="@+id/music_notify_name"/>

        <ImageButton
            android:id="@+id/music_notify_star"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/startnotify"
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/music_notify_singer"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/music_notify_next"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/next_button"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/music_notify_star"
            android:layout_below="@+id/music_notify_singer"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/music_notify_last"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/music_notify_star"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/music_notify_singer"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/perv_button"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

</LinearLayout>
