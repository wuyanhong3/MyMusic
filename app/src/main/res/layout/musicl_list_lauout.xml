<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/listTop">
        <ImageButton
            android:id="@+id/music_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="9dp"
            android:src="@mipmap/menu"
            android:scaleType="fitCenter"
            android:background="@null"/>
        <TextView
            android:id="@+id/music_list_total"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_marginLeft="9dp"
            android:text="@string/allMusic"
            android:clickable="true"
            android:textSize="17dp"
           android:background="@drawable/textbackground"
            android:gravity="center"/>
        <TextView
            android:id="@+id/music_list_collect"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="50dp"
            android:text="@string/collectMusic"
            android:clickable="true"
            android:textSize="17dp"
            android:background="@drawable/textbackground"
            android:gravity="center"/>
        <AutoCompleteTextView
            android:id="@+id/found_music_edit"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="搜音乐"
            android:textColorHint="@color/musicHome"
            android:background="@color/seek"
            android:visibility="visible"
            android:completionThreshold="1"/>
       <ImageButton
           android:id="@+id/found_music_button"
           android:layout_width="35dp"
           android:layout_height="40dp"
           android:layout_marginRight="10dp"
           android:background="@null"
           android:src="@mipmap/seacher"
           android:scaleType="fitCenter" />
    </LinearLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/music_list_viewpager"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v4.view.ViewPager>


</LinearLayout>
